#! /usr/bin/env php

<?php

error_reporting(E_ALL);

require 'vendor/autoload.php';

$app = new Symfony\Component\Console\Application('Hosts Manager', '0.1');

$app->add(new HostsManager\AddCommand);
$app->add(new HostsManager\RemoveCommand);
$app->add(new HostsManager\UpdateCommand);
$app->add(new HostsManager\CheckCommand);
$app->add(new HostsManager\RollbackCommand);
$app->add(new HostsManager\AddCommand);

$app->run();